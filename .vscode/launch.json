{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/build/out/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
	{
		"name": "Run Tests",
		"type": "node",
		"request": "launch",
		"program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
		"args": [
			"--runInBand",
			"--no-cache",
			"--watchAll"
		],
		"cwd": "${workspaceFolder}",
		"internalConsoleOptions": "openOnSessionStart",
		"outputCapture": "std"
	}
	]
}
